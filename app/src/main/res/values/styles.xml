<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="YourApplicationTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:buttonStyle">@style/number_button</item>
    </style>

    <style name="number_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/number_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="command_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/command_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


</resources>
